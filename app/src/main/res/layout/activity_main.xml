<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="amit.chefling_amit.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/image1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/posterImageView"
        android:scaleType="fitXY" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/CameraButton"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/posterImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/rNameEditText"
        android:hint="Type the recipe name"
        android:maxLines="1"
        android:textAlignment="center"
        android:background="@drawable/image3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/rNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/rTypeEditText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Choose your recipe type"
        android:background="@drawable/image3" />

    <Button
        android:text="Beginer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rTypeEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"
        android:id="@+id/level_button1"
        android:textAlignment="center"/>
    <Button
        android:text="Sous chef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_button2"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rTypeEditText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rTypeEditText"
        android:layout_toRightOf="@+id/level_button2"
        android:layout_toEndOf="@+id/level_button2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/level_button3"
        android:textAlignment="center"
       />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/imsge4"
        android:layout_below="@+id/level_button1"
        android:layout_alignRight="@+id/level_button1"
        android:layout_alignEnd="@+id/level_button1"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="29dp"
        android:id="@+id/imageView2" />

    <TextView
        android:text="Serves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_button2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="29dp"
        android:id="@+id/rServesTextView"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/image5"
        android:layout_below="@+id/level_button1"
        android:layout_toRightOf="@+id/rServesTextView"
        android:layout_toEndOf="@+id/rServesTextView"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:id="@+id/imageView3" />


    <TextView
        android:text="Cooking Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_button2"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="29dp"
        android:id="@+id/rCookingTimetextView"
        android:textStyle="normal|bold" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="49dp"
        android:id="@+id/editText3"
        android:hint="Notes, tell us the story behing it"
        android:textAlignment="textStart"
        android:background="@drawable/image3"
        android:gravity="start"
        android:padding="8dp"
        android:minLines="1" />
    <Button
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rNextbutton"
        android:layout_below="@+id/editText3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

     </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>